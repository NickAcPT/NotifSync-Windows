<Application x:Class="NotifSync.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NotifSync.UI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="Roboto">/Fonts/Roboto-Regular.ttf#Roboto</FontFamily>
            <FontFamily x:Key="RobotoMedium">/Fonts/Roboto-Medium.ttf#Roboto Medium</FontFamily>
            <FontFamily x:Key="RobotoLight">/Fonts/Roboto-Light.ttf#Roboto Medium</FontFamily>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="NotificationStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
